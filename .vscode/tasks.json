{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-current-file",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-std=c99",
                "${file}",
                "-o",
                "/tmp/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "compile-with-debug-symbols",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g3",
                "-O0",
                "-Wall",
                "-Wextra",
                "-std=c99",
                "-DDEBUG",
                "${file}",
                "-o",
                "/tmp/${fileBasenameNoExtension}_debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run-current-executable",
            "type": "shell",
            "command": "/tmp/${fileBasenameNoExtension}",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "dependsOn": "compile-current-file"
        }
    ]
}